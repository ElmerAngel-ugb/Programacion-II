<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/vista"
    tools:context=".MainActivity">

    <TabHost
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/tabArea"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/lblDeArea"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="De:"
                        android:textStyle="bold" />
                    <Spinner
                        android:id="@+id/cboDeArea"
                        android:entries="@array/conversorArea"
                        android:layout_marginLeft="40dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/lblDeAre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lblDeArea"
                        android:layout_marginTop="40dp"
                        android:text="A:"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/cboDeAre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lblDeAre"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="-22dp"
                        android:entries="@array/conversorArea" />

                    <EditText
                        android:id="@+id/txtcantidadAre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cboDeAre"
                        android:layout_marginTop="40dp"
                        android:hint="Cantidad"
                        android:inputType="number" />

                    <EditText
                        android:id="@+id/IblRespuestaAre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtcantidadAre"
                        android:layout_marginTop="12dp"
                        android:inputType="number"
                        android:text="Respuesta: ?" />

                    <Button
                        android:id="@+id/btncalcularAre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_below="@+id/IblRespuestaAre"
                        android:text="Calcular" />


                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/Agua"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lbltitulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PARCIAL_1"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="160dp"/>

                    <EditText
                        android:id="@+id/txtnum1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lbltitulo"
                        android:layout_marginTop="5dp"
                        android:hint="m3 de Agua consumido"
                        android:inputType="number" />


                    <TextView
                        android:id="@+id/lblrespuesta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/btncalcular"
                        android:layout_marginLeft="140dp"
                        android:layout_marginTop="38dp"
                        android:text="Respuesta:?"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/btncalcular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtnum1"
                        android:layout_marginTop="74dp"
                        android:layout_marginBottom="10dp"
                        android:onClick="calcular"
                        android:text="CALCULAR" />


                </RelativeLayout>






            </FrameLayout>
        </LinearLayout>
    </TabHost>




</RelativeLayout>